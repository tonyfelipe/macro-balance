# Banco de Dados MySQL
# Para desenvolvimento local: mysql://usuario:senha@localhost:3306/macro_balance
# Para PlanetScale: mysql://user:pass@host/database?sslaccept=strict
DATABASE_URL=mysql://root:senha@localhost:3306/macro_balance

# JWT Secret (gere uma string aleatória segura de 32+ caracteres)
# Exemplo: openssl rand -base64 32
JWT_SECRET=sua_chave_secreta_aqui_minimo_32_caracteres_aleatorios

# Porta do servidor (opcional, padrão 3000)
PORT=3000

# Ambiente (development ou production)
NODE_ENV=development
